{
  "name": "@dudley/stringify-pi",
  "version": "1.0.0",
  "description": "Stringify number values that might be multiples of Ï€",
  "license": "MIT",
  "repository": "dudleycarr/stringify-pi",
  "author": {
    "name": "James Talmage",
    "email": "james@talmage.io",
    "url": "github.com/jamestalmage"
  },
  "contributors": [
    "Dudley Carr <dudley@stackaid.us> (https://github.com/dudleycarr/)"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "del-cli dist && tsup ./source/index.ts --dts --sourcemap --format esm,cjs",
    "test": "tsc --noEmit && npm run lint && nyc ava",
    "test-ci": "npm run test && nyc report --reporter=text-lcov",
    "cover": "nyc --reporter=lcov --reporter=text --reporter=html ava",
    "lint": "xo",
    "debug": "ava",
    "watch": "ava -w",
    "publish": "npm run build && np"
  },
  "main": "./index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "index.js",
    "dist/index.js",
    "dist/index.js.map",
    "dist/index.mjs.map",
    "dist/index.mjs.map",
    "dist/index.d.ts",
    "license",
    "readme.md"
  ],
  "keywords": [
    "pi"
  ],
  "dependencies": {
    "almost-equal": "^1.1.0",
    "num2fraction": "^1.2.2"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/num2fraction": "^1.2.0",
    "ava": "^4.3.3",
    "del-cli": "^5.0.0",
    "np": "^7.6.2",
    "nyc": "15.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4",
    "xo": "^0.52.4"
  },
  "sideEffects": false,
  "ava": {
    "files": [
      "test/**/*"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/test/**"
    ]
  },
  "prettier": {
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "singleQuote": true,
    "bracketSpacing": false
  },
  "xo": {
    "space": true,
    "envs": [
      "node"
    ],
    "ignores": [
      "index.js"
    ],
    "prettier": true,
    "rules": {
      "import/extensions": "off",
      "unicorn/numeric-separators-style": "off"
    }
  }
}
